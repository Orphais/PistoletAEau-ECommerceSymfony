<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}{% endblock %}
		</title>

		{% block stylesheets %}
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.8/dist/journal/bootstrap.min.css">

			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
		{% endblock %}


		{% block javascripts %}{% endblock %}
	</head>
	<body>
		{% include "_partials/_adminHeaderHorizontal.html.twig" %}

		<div class="row">
			<div class="col-md-2 min-vh-100 bg-light" style="width: 250px;">
				{% block header %}
					{% include "_partials/_adminHeader.html.twig" %}
				{% endblock %}
			</div>

			<div class="col">
				{% block body %}{% endblock %}
			</div>
		</div>

		<div>
			{% block footer %}{% endblock %}
		</div>
	</body>
</html>

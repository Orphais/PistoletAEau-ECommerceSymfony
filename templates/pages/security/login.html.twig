{% extends 'base.html.twig' %}

{% block title %}
	{{ 'security.login.pageTitle'|trans }}
{% endblock %}

{% block body %}
	<div class="container">
		<h1>{{ 'security.login.title'|trans }}</h1>

		{% if error %}
			<div class="alert alert-dismissible alert-primary mt-4">
				{{ error.messageKey|trans(error.messageData, 'security') }}
			</div>
		{% endif %}

		<form action="{{ path('security.login') }}" method="post">
			<div>
				<label for="username" class="form-label mt-4">{{ 'security.login.email'|trans }}</label>
				<input type="email" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="exemple@tiramisou.com">
				<small id="emailHelp" class="form-text text-muted">{{ 'security.login.email.help'|trans }}</small>
			</div>
			<div>
				<label for="password" class="form-label mt-4">{{ 'security.login.password'|trans }}</label>
				<input type="password" class="form-control" id="password" name="_password" placeholder="********">
			</div>

			<button type="submit" class="btn btn-primary mt-4">{{ 'security.login.submit'|trans }}</button>
		</form>
	</div>
{% endblock %}

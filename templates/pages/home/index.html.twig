{% extends "base.html.twig" %}

{% block title %}{{ 'home.pageTitle'|trans }}
{% endblock %}

{% block body %}
	<div class="header flex text-center">
		<h1>{{ 'home.title'|trans }}</h1>
		<p>{{ 'home.description'|trans }}</p>
	</div>

	<div class="row row-cols-1 row-cols-md-4 g-4">
		{% for product in products %}
			<div class="col">
				<a href="" class="text-decoration-none">
					<div class="card ">
						<img src="{{ product.getImage[0].url }}" class="card-img-top" alt="{{ product.name }}">
						<div class="card-body">
							<h5 class="card-title">
								{{ product.name }}</h5>
							<p class="text-muted">{{ product.price }}â‚¬</p>
						</div>
						<div class="card-footer">
							<small class="text-body-secondary">Stock :
								{{ product.stock }}</small>
						</div>
					</div>
				</a>
			</div>
		{% endfor %}
	</div>
	<div class="navigation d-flex justify-content-center mt-4">
		{{ knp_pagination_render(products, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
	</div>
{% endblock %}

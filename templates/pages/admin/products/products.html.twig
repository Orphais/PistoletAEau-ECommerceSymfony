{% extends 'adminBase.html.twig' %}

{% block title %}Produits - Tiramisou
{% endblock %}


{% block body %}
	<div class="m-4">
		<div class="d-flex justify-content-between align-items-center mb-4">
			<h1 class="">Gestion des produits</h1>
			<a href="{{ path('admin.product.new') }}" class="btn btn-secondary">Ajouter un produit</a>
		</div>

		{% for message in app.flashes('success') %}
			<div class="alert alert-dismissible alert-success">
				<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
				{{ message }}
			</div>
		{% endfor %}

		<table class="table table-hover mt-4">
			<thead>
				<tr>
					<th></th>
					<th>Nom</th>
					<th>Catégorie</th>
					<th>Description</th>
					<th>Prix</th>
					<th>Stock</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for product in products %}
					<tr>
						<td><img src="{{ product.image[0].url }}" alt="{{ product.name }}" width="50"></td>
						<td>{{ product.name }}</td>
						<td>{{ product.category.name }}</td>
						<td>{{ product.description }}</td>
						<td>{{ product.price }}€</td>
						{% if product.stock != 0 %}
							<td>{{ product.stock }}</td>
						{% else %}
							<td class="text-primary">Rupture</td>
						{% endif %}
						<td>
							<div class="dropdown">
								<button class="btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
									<i class="bi bi-three-dots"></i>
								</button>
								<ul class="dropdown-menu">
									<li>
										<a class="dropdown-item" href="{{ path('admin.product.show', {'id': product.id}) }}">Détails</a>
									</li>
									<li>
										<a class="dropdown-item" href="{{ path('admin.product.edit', {'id': product.id}) }}">Modifier</a>
									</li>
									<li>
										<a class="dropdown-item text-primary" href="#">Supprimer</a>
									</li>
								</ul>
							</div>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div class="d-flex flex-row justify-content-between align-items-center">
			<div>
				<b>{{ productsCount }}</b>
				résultats
			</div>
			<div class="navigation">
				{{ knp_pagination_render(products, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
			</div>
		</div>
	</div>
{% endblock %}

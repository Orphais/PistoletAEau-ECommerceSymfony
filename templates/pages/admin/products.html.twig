{% extends 'adminBase.html.twig' %}

{% block title %}Produits - Tiramisou
{% endblock %}


{% block body %}
	<div class="m-4">
		<h1 class="">Gestion des produits</h1>

		<table class="table table-hover mt-4">
			<thead>
				<tr>
					<th></th>
					<th>Nom</th>
					<th>Catégorie</th>
					<th>Description</th>
					<th>Prix</th>
					<th>Stock</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for product in products %}
					<tr>
						<td><img src="{{ product.image[0].url }}" alt="{{ product.name }}" width="50"></td>
						<td>{{ product.name }}</td>
						<td>{{ product.category.name }}</td>
						<td>{{ product.description }}</td>
						<td>{{ product.price }}€</td>
						{% if product.stock != 0 %}
							<td>{{ product.stock }}</td>
						{% else %}
							<td class="text-primary">Rupture</td>
						{% endif %}
						<td>
							<div class="dropdown">
								<button class="btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
									<i class="bi bi-three-dots"></i>
								</button>
								<ul class="dropdown-menu">
									<li>
										<a class="dropdown-item" href="#">Détails</a>
									</li>
									<li>
										<a class="dropdown-item" href="#">Modifier</a>
									</li>
									<li>
										<a class="dropdown-item text-primary" href="#">Supprimer</a>
									</li>
								</ul>
							</div>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
